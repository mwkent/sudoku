package com.sudoku.updater;

import java.util.HashMap;
import java.util.Map;

import org.junit.Assert;
import org.junit.Test;

import com.sudoku.Board;
import com.sudoku.Boards;
import com.sudoku.Square;

/**
 * @author Matt Kent
 */
public class UpdaterFromBoxTest {

	private static final int[][] ONE_BOX_BOARD = new int[][] //
	{
	/*    */{ 4, 3, 5, 2, 6, 9, 7, 8, 1 },//
			{ 6, 8, 2, 5, 7, 1, 4, 9, 3 },//
			{ 1, 9, 7, 8, 3, 4, 5, 6, 2 },//
			{ 8, 2, 6, 1, 9, 5, 3, 4, 7 },//
			{ 3, 7, 4, 6, 8, 2, 9, 1, 5 },//
			{ 9, 5, 1, 7, 4, 3, 6, 2, 8 },//
			{ 5, 1, 9, 3, 2, 6, 8, 7, 4 },//
			{ 2, 4, 8, 9, 5, 7, 1, 3, 6 },//
			{ 7, 6, 3, 4, 1, 8, 2, 5, 9 } //
	};

	@Test
	public void test() {
		final Board board = Boards.getBoard(ONE_BOX_BOARD);
		final Map<Square, Integer> updatedValues = new HashMap<>();
		updatedValues.put(board.getSquare(0, 0), 4);
		final Updater updater = new UpdaterFromBox(board);
		for (int row = 0; row < board.getNumRows(); row++) {
			for (int col = 0; col < board.getNumCols(); col++) {
				updater.update(board.getSquare(row, col));
			}
		}
		for (final Square square : updatedValues.keySet()) {
			Assert.assertEquals(updatedValues.get(square), (int)square.getValue());
		}
	}

}
